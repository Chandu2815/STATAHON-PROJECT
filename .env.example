# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mospi_dpi
DATABASE_ECHO=false

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=MoSPI Data Portal Infrastructure
DEBUG=false

# Rate Limiting
RATE_LIMIT_PUBLIC=100/day
RATE_LIMIT_RESEARCHER=1000/day
RATE_LIMIT_PREMIUM=10000/day

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Payment Gateway (Mock)
PAYMENT_GATEWAY_URL=https://mock-payment-gateway.example.com
PAYMENT_API_KEY=mock-api-key

# CORS - Include your Railway domain
ALLOWED_ORIGINS=https://your-app.railway.app,https://localhost:3000,https://localhost:8000

# Security
SECURE_COOKIES=true

# Logging
LOG_LEVEL=INFO
